<% @post.comments.each do |comment| %>
<div class="card">
  <div class="card-body">
  <div class="container">
    <div class="row border-between">
    <!--  <div class="col-sm-2" style="padding-right:20spx; border-right: 1px solid #ccc;"> -->
    <div class="col-sm-2">
        <h6 class="userfont"><%= comment.username %></h6>
      </div>
      <div class="col-sm-10">
        <h6 class="titlefont">Re: <%= @post.title %></h6>
      </div>
    </div>
    <div class="row border-between">
    <!--  <div class="col-sm-2" style="padding-right:20spx; border-right: 1px solid #ccc;"> -->
    <div class="col-sm-2">
        <!--<p><strong><%= comment.username %></strong>-->
        <br><br>
        <%= link_to 'Edit', edit_post_comment_path(@post, comment), :class => 'btn btn-default' %>
        <%= link_to 'delet', [comment.post, comment],
                                          method: :delete,
                                          data: { confirm: 'delet this??'},
                                          :class => 'btn btn-danger' %>
      </div>
    <div class="col-sm-10">
      <%= simple_format(comment.body) %>
  </div>
</div>
</div>
</div>
</div>
<% end %>
