  </head>

  <body class="body-background">

    <nav class="navbar navbar-expand navbar-dark fixed-top bg-dark border-bottom-0">
      <a class="navbar-brand" href="/">Overhead</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
          </ul>
          <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <%= link_to "Profile", '/profile', :class => 'btn card text-white bg-secondary' %>
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'btn card text-white bg-danger' %>
          </ul>
          <% else %>
          <ul class="nav navbar-nav navbar-right">
            <%= link_to "Sign Up", '/users/sign_up', :class => 'btn card text-white bg-secondary' %>
            <%= link_to "Login", '/users/sign_in', :class => 'btn card text-white bg-secondary' %>
          </ul>
          <% end %>
      <!--
        <form id="signin" class="form-inline mt-2 mt-md-0">
          <div class="input-group">
            <!--<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>->
            <input id="email" type="email" class="form-control" name="email" value="" placeholder="Email Address">
          </div>
          <div class="input-group">
            <!--<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>->
            <input id="password" type="password" class="form-control" name="password" value="" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
          <%= link_to "Sign Up", '/users/sign_up', :class => 'btn btn-default' %>
        </form>
      -->
      </div>
    </nav>



    <nav class="navbar navbar-expand navbar-dark fixed-top bg-secondary" style="margin-top: 56px;">
      <a class="navbar-brand"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/lobby">Lobby</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/forum">Forum</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/resources">Resources</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">Contact Us</a>
          </li>
        </ul>
      </div>
    </nav>

    <% if notice %>
      <div class="container card bg-info text-white", style="margin-top: 56px; padding-top: 20px;">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="container card bg-danger text-white">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">Project Overhead</p>
      </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
