<h1><%= @post.forum.name %></h1>
<br>

<div class="card">
  <div class="card-body">
    <div class="container">
      <div class="row border-between">
        <div class="col-sm-2">
          <h6 class="userfont"><%= @post.username %></h6>
        </div>
        <div class="col-sm-10">
          <h6 class="titlefont"><%= @post.title %></h6>
      </div>
    </div>
    <div class="row border-between">
    <div class="col-sm-2">
        <br><br>
        <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-default' %>
        <%= link_to 'delet', post_path(@post),
                                          method: :delete,
                                          data: { confirm: 'delet this??'},
                                          :class => 'btn btn-danger' %>
      </div>
    <div class="col-sm-10">
      <%= simple_format(@post.body) %>
  </div>
</div>
</div>
</div>
</div>

