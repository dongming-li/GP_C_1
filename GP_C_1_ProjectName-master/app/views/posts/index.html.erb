<h1>Overhead</h1>
<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
    <h2><%= post.forum.name %></h2>
    <h3><%= post.title %></h3>
    <p><%= simple_format(post.body).truncate(200, omission: '...(continued)') %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
  </div>
</div>
<% end %>
