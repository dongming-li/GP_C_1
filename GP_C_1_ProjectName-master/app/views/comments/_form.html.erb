<h3>Reply</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
  <!--  <%= f.label :username %><br> -->
    <%= f.hidden_field :username, :value => current_user.email %>
  </p>


  <p>
    <h6 class="userfont"><%= current_user.email %></h6>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-default'}) %>
  </p>
<% end %>
